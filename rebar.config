{edoc_opts, [{todo, true}]}.

{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

{deps, [
    {uuid, ".*", {git, "https://github.com/okeuday/uuid.git", {tag, "v1.7.5"}}}
    ]}.

{erl_opts, [
            bin_opt_info,
            debug_info,
            warn_bif_clash,
            warn_export_all,
            warn_export_vars,
            warn_format,
            warn_missing_spec,
            warn_obsolete_guard,
            warn_untyped_record,
            warn_unused_import]}.

{cover_enabled, true}.

{dialyzer_opts,
    [{warnings,
        [error_handling,
         race_conditions,
         behaviours]}]}.

{xref_checks, [undefined_function_calls,
               locals_not_used,
               exports_not_used]}.
